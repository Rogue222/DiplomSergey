<Window x:Class="Diplom.Windows.Potolki"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom.Windows"
        mc:Ignorable="d"
        Title="Potolki" Height="450" Width="800" Background="Teal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label HorizontalContentAlignment="Center" Content="О потолках" 
               FontFamily="Verdana" FontWeight="Bold" Foreground="Bisque" 
               FontSize="48"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="5 5 5 5" >
                <TextBlock Margin="5 0 15 0" x:Name="fpd" TextWrapping="Wrap"/>
                <Image Source="/Pageses/natjazhnye-potolki-chto-luchshe-tkanevye-ili-pvh-polotna-3919b32.jpg" 
                       Height="340" Width="681" />
                <TextBlock Margin="5 0 15 0" x:Name="fps" 
                           TextWrapping="Wrap"/>
                <Image Source="/Pageses/1673411379_pro-dachnikov-com-p-polosatii-potolok-v-interere-foto-78.jpg" 
                       Height="266" Width="599" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
